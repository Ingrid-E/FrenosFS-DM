<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogIn"
    android:layout_gravity="center_horizontal"
    android:background="@color/baseBlack">

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/antonio_variable"
            android:text="Frenos FS"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Distribuidor Autorizado"
            android:fontFamily="@font/antonio_variable"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/white_line"
            android:layout_width="350dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/log_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antonio_variable"
                android:text="Nombre Usuario"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/et_username"
                style="@style/Rounded_EditText"
                android:ems="10"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antonio_variable"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_email"
                style="@style/Rounded_EditText"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antonio_variable"
                android:text="ContraseÃ±a"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_password"
                style="@style/Rounded_EditText"
                android:inputType="textPassword" />


        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/create_button"
        android:layout_marginBottom="100dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:letterSpacing="0.09"
        android:text="Crear Cuenta"
        android:layout_gravity="center"
        android:fontFamily="@font/antonio_variable"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

</LinearLayout>